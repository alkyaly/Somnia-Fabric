{
  "schemaVersion": 1,
  "id": "somnia",
  "version": "${version}",
  "name": "Somnia Awoken",
  "description": "Simulating the level while you sleep",
  "icon": "logo.png",
  "authors": [
    "alkyaLy"
  ],
  "contact": {
    "sources": "https://github.com/alkyaly/Somnia-Fabric",
    "issues": "https://github.com/alkyaly/Somnia-Fabric/issues"
  },

  "license": "LGPLv3",
  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.alkyaly.somnia.core.Somnia"
    ],
    "client": [
      "io.github.alkyaly.somnia.core.SomniaClient"
    ],
    "cardinal-components": [
      "io.github.alkyaly.somnia.api.capability.Components"
    ]
  },
  "mixins": [
    "somnia.mixins.json"
  ],
  "custom": {
    "cardinal-components": [
      "somnia:fatigue"
    ]
  },

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": ">=0.40.0",
    "java": ">=17",
    "minecraft": ">=1.18",
    "cardinal-components-base": "4.x.x",
    "cardinal-components-entity": "4.x.x"
  }
}